{
  "name": "pharmacy-management-backend",
  "version": "1.0.0",
  "description": "Backend API for Pharmacy Management System",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc && cp src/swagger.yaml dist/",
    "start": "node dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts",
    "test": "dotenv -e .env.test -- jest",
    "test:watch": "dotenv -e .env.test -- jest --watch",
    "test:db": "dotenv -e .env.test -- prisma migrate deploy",
    "sonar:up": "docker-compose -f docker-compose-sonar.yml up -d",
    "sonar:down": "docker-compose -f docker-compose-sonar.yml down",
    "profile:api": "bash scripts/profile_api.sh",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "pharmacy",
    "management",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@bull-board/api": "^6.16.4",
    "@bull-board/express": "^6.16.4",
    "@googlemaps/google-maps-services-js": "^3.3.36",
    "@prisma/client": "^5.7.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@types/js-yaml": "^4.0.9",
    "axios": "^1.13.4",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.0.0",
    "cloudinary": "^2.9.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dayjs": "^1.11.19",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "js-yaml": "^4.1.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.23",
    "multer": "^2.0.2",
    "nodemailer": "^8.0.0",
    "redis": "^5.10.0",
    "socket.io": "^4.8.3",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@types/socket.io": "^3.0.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "autocannon": "^8.0.0",
    "clinic": "^13.0.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.0",
    "prisma-dbml-generator": "^0.12.0",
    "prisma-erd-generator": "^2.4.2",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
